<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/experience_bar_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_small_margin"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginStart="@dimen/text_medium_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textIsSelectable="false"/>

    <ImageView
        android:id="@+id/experience_bar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:background="@drawable/ic_help_black_24dp"
        android:contentDescription="@string/how_to_experience"
        android:layout_marginEnd="@dimen/text_medium_margin"/>
</LinearLayout>